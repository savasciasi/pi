# ============================================
# Pi Studio Pilates - Environment Configuration
# ============================================
#
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Database Configuration (PostgreSQL via Supabase/Bolt)
# These values are provided by your Supabase/Bolt database instance
PGHOST=aws-0-eu-central-1.pooler.supabase.com
PGPORT=6543
PGDATABASE=postgres
PGUSER=postgres.your_project_id
PGPASSWORD=your_secure_database_password

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://pistudiopilates.com

# Security Settings
# For production, set SESSION_SECURE=true (requires HTTPS)
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Email Configuration (Optional - for contact form notifications)
# If you want to receive email notifications when someone submits the contact form
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=info@pistudiopilates.com
SMTP_FROM_NAME="Pi Studio Pilates"

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,mp4

# Rate Limiting (attempts per 15 minutes)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_CONTACT=3
